{
  "type": "multi",
  "patch": [
    {
      "type": "replace",
      "patch": {
        "directory": "#workdir/patches/replace/Classic 3D - patch 1.13 textures"
      }
    },
    {
      "type": "mixin_json",
      "patch": {
        "mixins": [
          {
            "file_selector": {
              "type": "path",
              "arguments": {
                "path": "assets/minecraft/models/block",
                "regex": "^smooth_stone"
              }
            },
            "selector": {
              "type": "path",
              "arguments": {
                "location": "textures"
              }
            },
            "modifiers": [
              {
                "type": "set",
                "arguments": {
                  "data": {
                    "all": "block/stone_slab_top",
		                "side": "block/stone_slab_side"
                  },
                  "merge": true
                }
              }
            ]
          },
          {
            "file_selector": {
              "type": "path",
              "arguments": {
                "path": "assets/minecraft/models/block",
                "regex": "^repeater|^comparator"
              }
            },
            "selector": {
              "type": "path",
              "arguments": {
                "location": "textures/slab"
              }
            },
            "modifiers": [
              {
                "type": "set",
                "arguments": {
                  "data": "block/stone_slab_top"
                }
              }
            ]
          },
          {
            "file_selector": {
              "type": "file",
              "arguments": {
                "files": ["assets/minecraft/models/block/nether_quartz_ore.json"]
              }
            },
            "selector": {
              "type": "path",
              "arguments": {
                "location": "textures"
              }
            },
            "modifiers": [
              {
                "type": "set",
                "arguments": {
                  "data": {
                    "ore": "3d/nether_quartz_ore",
                    "cube": "block/netherrack"
                  },
                  "merge": true
                }
              }
            ]
          }
        ]
      }
    }
  ]
}